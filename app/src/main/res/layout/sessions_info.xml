<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/session_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[DATE_TIME_SLOT]"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/session_student_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student: [STUDENT_NAME] | Course: [COURSE]"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/session_status_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: [SESSION_STATUS]"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/darker_gray"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>